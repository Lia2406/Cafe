#include <stdio.h>
#include <string.h>

typedef struct {
	int id;
	char role [10];
} User; //Untuk mengidentifikasi jenis login yang dibutuhkan user

typedef struct {
	char Nama [100];  
    int NoItem; 
    int JumlahItem; 
    float Harga;
} OrderItem; // untuk menyimpan detail setiap item yang di pesan 

typedef struct {
    int id;
    int customerId;
    int jumlahItem;
    float totalHarga;
    char status[];  // "diproses", "selesai", dll.
} Order; // untuk menyimpan informasi pesanan pelanggan 


typedef struct {
	int NoMeja; 
	char Status; 
}; Meja; //untuk menyipan meja 

typedef struct {
    int tahun;
    int bulan;
    int hari;
    int jam;
    int menit;
    int detik;
} WaktuSaatIni; // unutk menyimpan tanggal pesanan 

typedef struct {
    int id;
    char nama[100];
    float harga;
    int stok;
} MenuItem; // untuk menyimpan detail menu


typedef struct {
    int id;
    char nama[100];
    char alamat[100];
    char noTelepon[15];
} Customer; //untuk menyimpan data pelanggan 

int main (){
}

